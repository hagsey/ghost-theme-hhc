{{!< default}}
{{> "page_header"}}

{{#is "page"}}
  <h2 class="page-banner">Blog</h2>
  <main class="page-content blog">
    {{#get "posts" limit="5"}}
      {{#foreach posts}}
      <article class="{{post_class}}">
          <header class="post-header">
              <h2 class="post-title"><a href="{{url}}">{{title}}</a></h2>
              <time class="post-date" datetime="{{date format="YYYY-MM-DD"}}">{{date format="MMMM D, YYYY"}}</time>
          </header>
          <section class="post-excerpt">
              <p>{{excerpt words="100"}} <a class="read-more" href="{{url}}">Read more &raquo;</a></p>
          </section>
          <footer class="post-meta">
              {{#if author.image}}<img class="author-thumb" src="{{author.image}}" alt="{{author.name}}" nopin="nopin" />{{/if}}
              {{author}}
              {{tags prefix=" on "}}
          </footer>
      </article>
      {{/foreach}}
      <div class="pagination">
        {{pagination}}
      </div>
    {{/get}}

{{!-- Previous/next page links - displayed on every page --}}
  </main>

{{/is}}